{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports" : true,
    "experimentalDecorators": true,
    // "module": "ESNext",
    // "moduleResolution": "Node"
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["src"]
}
